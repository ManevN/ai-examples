@{
    ViewData["Title"] = "Video Transcription";
}
<h2>Video Transcription</h2>

<form asp-action="Transcribe" method="post">
    <label>Video URL</label>
    <input type="text" name="videoUrl" style="width:400px;" />
    <button type="submit">Transcribe</button>
</form>

@if (ViewBag.Transcript != null)
{
    <h3>Transcript</h3>
    <pre>@ViewBag.Transcript</pre>
}